<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pay" />

    <TextView
        android:id="@+id/textViewPayProduct"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="125dp"
        android:paddingTop="@dimen/default_timestamp_text_size"
        android:paddingBottom="@dimen/default_timestamp_text_size"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Switch
        android:id="@+id/switchPayProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="horizontal|vertical"
        android:minHeight="52dp"
        android:text="@string/action_confirm"
        android:textAlignment="textEnd" />

    <Button
        android:id="@+id/buttonPaymentsProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="73dp"
        android:text="@string/Pay" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</LinearLayout>